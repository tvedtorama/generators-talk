{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "es2017",
        "lib": ["dom", "esnext", "esnext.asynciterable"],
        "sourceMap": true,  // required for webpack ts-loader
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "rootDir": "./lib",
        "outDir": "./build"
    },
    "exclude": [
        "node_modules"
    ]
}
